{
  "openapi": "3.0.1",
  "info": {
    "title": "API de Clientes",
    "description": "API de acesso aos dados de clientes",
    "version": "3.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/api/clientes": {
      "get": {
        "tags": [
          "cliente-controller"
        ],
        "summary": "Listar todos os clientes",
        "operationId": "listar",
        "responses": {
          "404": {
            "description": "Recurso não encontrado"
          },
          "400": {
            "description": "Requisição inválida."
          },
          "200": {
            "description": "Clientes ativos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Cliente"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "cliente-controller"
        ],
        "operationId": "atualizar",
        "parameters": [
          {
            "name": "clienteData",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Cliente"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "cliente-controller"
        ],
        "operationId": "incluir",
        "parameters": [
          {
            "name": "clienteData",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "file"
                ],
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/IncluirClienteResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/clientes/{id}": {
      "get": {
        "tags": [
          "cliente-controller"
        ],
        "summary": "Consultar Cliente por ID",
        "operationId": "ler",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes de um cliente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Cliente"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "cliente-controller"
        ],
        "operationId": "deletar",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Cliente": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nome": {
            "type": "string"
          },
          "telefone": {
            "type": "string"
          },
          "matricula": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "foto": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "byte"
            }
          },
          "dataCadastro": {
            "type": "string",
            "format": "date-time"
          },
          "ultimaAtualizacao": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "IncluirClienteResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nome": {
            "type": "string"
          },
          "telefone": {
            "type": "string"
          },
          "matricula": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "dataCadastro": {
            "type": "string",
            "format": "date-time"
          },
          "ultimaAtualizacao": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}